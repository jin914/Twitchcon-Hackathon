{
	"manifest_version": 2,
	"name": "Surprise me!",
	"version": "1.0",
	"description": "twitch api extension",

	"browser_action": {
    	"default_popup": "extension.html"
 	 },

  	"permissions":
  	[
  		"storage",
  		"tabs",
  		"identity"
  	],

	 "background":{
	  "scripts": ["background.js"],
	  "persistent": true
	 },

	 "background":{
	  "scripts": ["token.js"],
	  "persistent": false
	 }


}